# HireGage Environment Variables - Example Configuration
# Make a copy of this file named .env and fill in your own values

# API Settings
API_VERSION=v1
API_PREFIX=/api/v1
DEBUG=True

# Security
SECRET_KEY=your_super_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_api_key

# Database Configuration (optional)
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost/hiregage_db

# Optional: Text-to-Speech API Key
# TTS_API_KEY=your_tts_api_key
